# Environment Configuration for Aranya One
# Copy this file to .env.local and configure your values

# Application Settings
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Database Configuration
DATABASE_TYPE=memory
# For production, use:
# DATABASE_TYPE=supabase
# SUPABASE_URL=your-supabase-project-url
# SUPABASE_ANON_KEY=your-supabase-anon-key
# SUPABASE_SERVICE_KEY=your-supabase-service-key

# PostgreSQL (alternative)
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://username:password@localhost:5432/aranyaone

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs

# Payment Providers
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@aranyaone.com
FROM_NAME=Aranya One

# External Services
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_SEARCH_CONSOLE_ID=your-search-console-id

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Firebase (for notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# OpenAI (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# S3/CloudFlare R2 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=aranyaone-uploads

# CDN
CDN_URL=https://cdn.aranyaone.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000
SECURE_COOKIES=false
# Set to true in production

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME=true
ENABLE_ANALYTICS=true
ENABLE_PAYMENTS=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR=true

# Performance
CACHE_TTL=3600
MAX_REQUEST_SIZE=10mb
MAX_FILE_SIZE=50mb

# Social Authentication (future)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Webhooks
WEBHOOK_SECRET=your-webhook-secret-for-security

# Admin Settings
ADMIN_EMAIL=admin@aranyaone.com
SUPPORT_EMAIL=support@aranyaone.com