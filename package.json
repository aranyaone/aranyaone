{
  "name": "aranyaone",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "vercel-build": "next build",
    "analyze": "ANALYZE=true next build",
    "build:stats": "next build && npx webpack-bundle-analyzer .next/static/chunks/*.js",
    "lighthouse": "npx lighthouse http://localhost:3000 --output-path ./lighthouse-report.html --output html",
    "perf:audit": "npm run build && npm run lighthouse",
    "size-limit": "npx size-limit",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "framer-motion": "^12.23.9",
    "next": "14.2.15",
    "react": "^18",
    "react-dom": "^18",
    "web-vitals": "^4.2.4"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "@next/bundle-analyzer": "^14.2.15",
    "@size-limit/preset-app": "^11.1.6",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "postcss": "^8.4.49",
    "size-limit": "^11.1.6",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.0.0",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "size-limit": [
    {
      "path": "out/_next/static/chunks/vendors-*.js",
      "limit": "100 KB"
    },
    {
      "path": "out/_next/static/chunks/main-*.js",
      "limit": "15 KB"
    },
    {
      "path": "out/_next/static/css/*.css",
      "limit": "8 KB"
    }
  ]
}
